# Required
OPENAI_API_KEY=sk-your-key-here

# Model selection
# - Default in code: gpt-5
# - You can override to gpt-4o (or any vision-capable model you have access to)
OPENAI_MODEL=gpt-5

# Token / timeout controls
OPENAI_MAX_COMPLETION_TOKENS=4096
OPENAI_TIMEOUT_SECONDS=900

# Optional (used for some OpenAI API tiers / models)
# OPENAI_SERVICE_TIER=

# If true, the annotator will try the Responses API w/ code interpreter first, then fall back to Chat Completions.
OPENAI_ENABLE_CODE_INTERPRETER=false

# Flask / app settings
MAX_FILE_SIZE_MB=16
# For production, set a strong random secret:
# SECRET_KEY=replace-me

# SQLite metadata DB
# The app auto-creates this file if it doesn't exist.
ANNOTATION_DB_PATH=data/metadata.db

# Preprocessing (candidate UI element hints) via OmniParser (recommended) or OpenCV fallback.
# The pipeline can run without OmniParser installed, but preprocessing quality may be lower.
ANNOTATOR_PREPROCESS_ENABLE=true
ANNOTATOR_PREPROCESS_MAX_ELEMENTS=24

# OmniParser backend:
# - local: use `omniparser_local.py` models (requires extra deps like torch/transformers/ultralytics)
# - http(s) URL: call a remote OmniParser service
OMNIPARSER_URL=local
OMNIPARSER_API_KEY=
OMNIPARSER_TIMEOUT=30
OMNIPARSER_MIN_CONF=0.3
OMNIPARSER_CONF_THRESHOLD=0.5


